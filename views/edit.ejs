<!DOCTYPE html>
<html>
<head>
  <title>Edit Student</title>

  <style>
    * {
      box-sizing: border-box;
      font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
    }

    body {
      margin: 0;
      height: 100vh;
      background: linear-gradient(135deg, #0f2027, #203a43, #2c5364);
      display: flex;
      align-items: center;
      justify-content: center;
      color: white;
      overflow: hidden;
    }

    /* Card */
    .card {
      width: 90%;
      max-width: 700px;
      padding: 40px;
      border-radius: 20px;
      background: rgba(255,255,255,0.12);
      backdrop-filter: blur(12px);
      position: relative;
      animation: slideIn 1.1s ease;
    }

    /* Animated Border */
    .card::before {
      content: "";
      position: absolute;
      inset: -2px;
      border-radius: 22px;
      background: linear-gradient(
        270deg,
        #00c6ff,
        #0072ff,
      );
      background-size: 400% 400%;
      z-index: -1;
      animation: borderGlow 6s linear infinite;
    }

    h1 {
      text-align: center;
      font-size: 32px;
      font-weight: 800;
      margin-bottom: 30px;
    }

    form {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 18px;
    }

    label {
      grid-column: span 2;
      font-weight: 600;
      margin-top: 10px;
      opacity: 0.9;
    }

    input {
      padding: 14px;
      border-radius: 10px;
      border: none;
      outline: none;
      font-size: 16px;
    }

    input:focus {
      box-shadow: 0 0 0 2px #00c6ff;
    }

    .full {
      grid-column: span 2;
    }

    .actions {
      grid-column: span 2;
      display: flex;
      justify-content: space-between;
      margin-top: 30px;
    }

    button {
      padding: 14px 32px;
      border-radius: 40px;
      border: none;
      font-size: 16px;
      font-weight: 700;
      cursor: pointer;
      background: linear-gradient(135deg, #00c6ff, #0072ff);
      color: white;
      transition: 0.3s;
    }

    button:hover {
      transform: translateY(-3px);
      box-shadow: 0 10px 25px rgba(0,0,0,0.4);
    }

    .cancel {
      text-decoration: none;
      padding: 14px 32px;
      border-radius: 40px;
      background: linear-gradient(135deg, #ff512f, #dd2476);
      color: white;
      font-weight: 700;
    }

    /* Animations */
    @keyframes slideIn {
      from { opacity: 0; transform: translateX(60px); }
      to { opacity: 1; transform: translateX(0); }
    }

    @keyframes borderGlow {
      0% { background-position: 0% 50%; }
      50% { background-position: 100% 50%; }
      100% { background-position: 0% 50%; }
    }
  </style>
</head>

<body>

  <div class="card">
    <h1>Edit Student Result</h1>

    <form method="POST" action="/edit/<%= student._id %>">

      <label>Student Name</label>
      <input class="full" type="text" name="name" value="<%= student.name %>" required />

      <label>Roll Number</label>
      <input class="full" type="text" name="rollNo" value="<%= student.rollno %>" required />

      <label>Subject Marks</label>
      <input type="number" name="subject1" value="<%= student.subject1 %>" required />
      <input type="number" name="subject2" value="<%= student.subject2 %>" required />
      <input type="number" name="subject3" value="<%= student.subject3 %>" required />
      <input type="number" name="subject4" value="<%= student.subject4 %>" required />
      <input class="full" type="number" name="subject5" value="<%= student.subject5 %>" required />

      <div class="actions">
        <button type="submit">ðŸ’¾ Update Student</button>
        <a href="/students" class="cancel">â¬… Cancel</a>
      </div>

    </form>
  </div>

</body>
</html>
